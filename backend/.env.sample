# Copy this to backend/.env and fill values
GOOGLE_GENAI_API_KEY=your_gemini_api_key_here

# Gmail OAuth storage inside the container
GOOGLE_TOKEN_PATH=/app/token.json
GOOGLE_CREDENTIALS_PATH=/app/credentials.json

# Polling seconds for new emails
POLL_INTERVAL=120

# Classifier knobs
REPLY_IMPORTANCE_THRESHOLD=0.6
REPLY_NEEDED_THRESHOLD=0.6

# Optional context for the classifier
# INBOX_OWNER_NAME=Your Name
# INBOX_OWNER_ALIASES=Nickname,Initials

# Optional overrides
# GOOGLE_GENAI_MODEL=gemini-2.5-flash

# CORS
CORS_ORIGINS=http://localhost:5173
